.container
    .profile_header
        .back_arrow
            = link_to 'javascript:history.back()' do
                %i.fas.fa-arrow-left
        .account_name
            %p= current_user.account_name

    .border_room
        .profile_img_border
            - if current_user.persisted? && current_user.avatar_image
                = form_with model: @profile, url: profile_path, method: :put, local: true do |f|
                    = image_tag current_user.avatar_image, class: 'profile_img', id: 'profile_avatar_prev'
                    = f.file_field :avatar, class: "image", style: "display:none;", id: "file"
                    = f.submit '', class: 'avatar hidden', style: "display:none;", id: 'file-btn'
            - else 
                = image_tag 'Ellipse.png'

    .numbers
        .numbers_post
            %p 44
            %P Posts
        .numbers_followers
            %p 22
            %P followers
        .numbers_following
            %p 100
            %P following

= javascript_pack_tag 'profile'