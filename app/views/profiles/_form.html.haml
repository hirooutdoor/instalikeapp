= form_with model: profile, url: profile_path, method: :post, local: true do |f|
    .profile_img_border
        -# %label
            -# %input{:hidden => "", :type => "file"}/
        .profile_img
            - if current_user.persisted? && current_user.avatar_image
                = image_tag current_user.avatar_image, onClick:"$('#upfile').click()"
            - else
                = image_tag 'Ellipse.png', onClick:"$('#upfile').click()"
        = f.file_field :avatar, id: 'upfile', class: 'hidden'
        = f.submit '', class: 'avatar hidden'